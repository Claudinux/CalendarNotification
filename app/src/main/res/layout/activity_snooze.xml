<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.quarck.calnotify.ActivitySnooze"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:id="@+id/snooze_view_event_details_layout"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:longClickable="false"
            android:id="@+id/snooze_view_cancel"
            android:src="@drawable/ic_clear_black_24dp"
            android:padding="@dimen/snooze_close_btn_padding"
            android:onClick="onButtonCancelClick"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/snooze_view_title_height"
            android:id="@+id/snooze_view_title"
            android:text="Event Title Place Holder.. Event Title Place Holder.. Event Title Place Holder.. Event Title Place Holder.. Event Title Place Holder.. "
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="24.0sp"
            android:textColor="@color/icons"

            android:paddingBottom="@dimen/snooze_view_header_spacing"
            android:paddingTop="@dimen/snooze_view_header_padding_top"

            android:paddingStart="@dimen/snooze_view_padding_start"
            android:paddingEnd="@dimen/snooze_view_padding_end"
            android:paddingRight="@dimen/snooze_view_padding_end"
            android:paddingLeft="@dimen/snooze_view_padding_start"
            android:clickable="true"
            android:onClick="OnButtonEventDetailsClick"
            android:maxHeight="@dimen/snooze_view_event_title_max_height"
            android:gravity="left|center"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/snooze_view_event_details_layout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="@dimen/snooze_view_action_padding_bottom"
                android:paddingTop="@dimen/snooze_view_action_padding_top">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:longClickable="false"
                    android:src="@drawable/ic_schedule_black_24dp"
                    android:paddingStart="@dimen/snooze_view_img_padding_start"
                    android:paddingEnd="@dimen/snooze_view_img_padding_end"
                    android:paddingRight="@dimen/snooze_view_img_padding_end"
                    android:paddingLeft="@dimen/snooze_view_img_padding_start"
                    android:paddingTop="@dimen/snooze_view_in_text_vert_padding"
                    android:paddingBottom="@dimen/snooze_view_img_topbottom"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/snooze_view_event_date"
                    android:text="Tomorrow"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/primary_text"
                    android:paddingBottom="@dimen/snooze_view_in_text_vert_padding"
                    android:paddingTop="@dimen/snooze_view_in_text_vert_padding"
                    android:paddingStart="@dimen/snooze_view_padding_start"
                    android:paddingEnd="@dimen/snooze_view_padding_end"
                    android:paddingRight="@dimen/snooze_view_padding_end"
                    android:paddingLeft="@dimen/snooze_view_padding_start"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/snooze_view_event_time"
                    android:text="22:00 - 23:00"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/primary_text"
                    android:paddingBottom="@dimen/snooze_view_in_text_vert_padding"
                    android:paddingTop="@dimen/snooze_view_in_text_vert_padding"
                    android:paddingStart="@dimen/snooze_view_padding_start"
                    android:paddingEnd="@dimen/snooze_view_padding_end"
                    android:paddingRight="@dimen/snooze_view_padding_end"
                    android:paddingLeft="@dimen/snooze_view_padding_start"
                    android:layout_below="@id/snooze_view_event_date"
                    />

            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/snooze_view_location_layout"
                android:background="#ffffff"
                android:paddingBottom="@dimen/snooze_view_action_padding_bottom"
                android:paddingTop="@dimen/snooze_view_action_padding_top"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:longClickable="false"
                    android:src="@drawable/ic_location_searching_black_24dp"
                    android:paddingStart="@dimen/snooze_view_img_padding_start"
                    android:paddingEnd="@dimen/snooze_view_img_padding_end"
                    android:paddingRight="@dimen/snooze_view_img_padding_end"
                    android:paddingLeft="@dimen/snooze_view_img_padding_start"
                    android:paddingTop="@dimen/snooze_view_in_text_vert_padding"
                    android:paddingBottom="@dimen/snooze_view_img_topbottom"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/snooze_view_location"
                    android:text="Meeting room 1.01"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/primary_text"
                    android:paddingBottom="@dimen/snooze_view_in_text_vert_padding"
                    android:paddingTop="@dimen/snooze_view_in_text_vert_padding"
                    android:paddingStart="@dimen/snooze_view_padding_start"
                    android:paddingEnd="@dimen/snooze_view_padding_end"
                    android:paddingRight="@dimen/snooze_view_padding_end"
                    android:paddingLeft="@dimen/snooze_view_padding_start"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:padding="0dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="@dimen/snooze_view_action_padding_bottom"
                android:paddingTop="@dimen/snooze_view_action_padding_top">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:longClickable="false"
                    android:src="@drawable/ic_history_black_24dp"
                    android:paddingStart="@dimen/snooze_view_img_padding_start"
                    android:paddingEnd="@dimen/snooze_view_img_padding_end"
                    android:paddingRight="@dimen/snooze_view_img_padding_end"
                    android:paddingLeft="@dimen/snooze_view_img_padding_start"
                    android:paddingTop="@dimen/snooze_view_in_text_vert_padding"
                    android:paddingBottom="@dimen/snooze_view_img_topbottom"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/snooze_snooze_for"
                    android:text="@string/snooze_event_for"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/primary_text"
                    android:paddingBottom="@dimen/snooze_view_spacing"
                    android:paddingTop="@dimen/snooze_view_in_text_vert_padding"
                    android:paddingStart="@dimen/snooze_view_padding_start"
                    android:paddingEnd="@dimen/snooze_view_padding_end"
                    android:paddingRight="@dimen/snooze_view_padding_end"
                    android:paddingLeft="@dimen/snooze_view_padding_start"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/snooze_view_snooze_present1"
                    android:text="@string/snooze_preset_15_min"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/primary_text"
                    android:paddingTop="@dimen/snooze_view_spacing"
                    android:paddingBottom="@dimen/snooze_view_spacing"
                    android:paddingStart="@dimen/snooze_view_padding_start"
                    android:paddingEnd="@dimen/snooze_view_padding_end"
                    android:paddingRight="@dimen/snooze_view_padding_end"
                    android:paddingLeft="@dimen/snooze_view_padding_start"
                    android:layout_below="@id/snooze_snooze_for"
                    android:clickable="true"
                    android:onClick="OnButtonSnoozePresent1Click"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/snooze_view_snooze_present2"
                    android:text="@string/snooze_preset_1_hour"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/primary_text"
                    android:paddingTop="@dimen/snooze_view_spacing"
                    android:paddingBottom="@dimen/snooze_view_spacing"
                    android:paddingStart="@dimen/snooze_view_padding_start"
                    android:paddingEnd="@dimen/snooze_view_padding_end"
                    android:paddingRight="@dimen/snooze_view_padding_end"
                    android:paddingLeft="@dimen/snooze_view_padding_start"
                    android:layout_below="@id/snooze_view_snooze_present1"
                    android:clickable="true"
                    android:onClick="OnButtonSnoozePresent2Click"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/snooze_view_snooze_present3"
                    android:text="@string/snooze_preset_4_hours"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/primary_text"
                    android:paddingTop="@dimen/snooze_view_spacing"
                    android:paddingBottom="@dimen/snooze_view_spacing"
                    android:paddingStart="@dimen/snooze_view_padding_start"
                    android:paddingEnd="@dimen/snooze_view_padding_end"
                    android:paddingRight="@dimen/snooze_view_padding_end"
                    android:paddingLeft="@dimen/snooze_view_padding_start"
                    android:layout_below="@id/snooze_view_snooze_present2"
                    android:clickable="true"
                    android:onClick="OnButtonSnoozePresent3Click"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/snooze_view_snooze_present4"
                    android:text="@string/snooze_preset_1_day"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/primary_text"
                    android:paddingTop="@dimen/snooze_view_spacing"
                    android:paddingBottom="@dimen/snooze_view_spacing"
                    android:paddingStart="@dimen/snooze_view_padding_start"
                    android:paddingEnd="@dimen/snooze_view_padding_end"
                    android:paddingRight="@dimen/snooze_view_padding_end"
                    android:paddingLeft="@dimen/snooze_view_padding_start"
                    android:layout_below="@id/snooze_view_snooze_present3"
                    android:clickable="true"
                    android:onClick="OnButtonSnoozePresent4Click"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/snooze_view_snooze_layout"
                android:background="#ffffff"
                android:paddingBottom="@dimen/snooze_view_action_padding_bottom"
                android:paddingTop="@dimen/snooze_view_action_padding_top">


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
